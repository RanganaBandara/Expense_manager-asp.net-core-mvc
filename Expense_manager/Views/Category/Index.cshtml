@model IEnumerable<Expense_manager.Models.Category>

@{
    ViewData["PageTitle"] = "Categories";
    ViewData["PageActionText"] = "+New Category";
    ViewData["PageActionUrl"] = "/Category/CreateAndEdit";

}


<div class="row">
    <div class="col-md-7">
        <ejs-grid id="Categories" dataSource="@Model" gridLines="None"
        allowSorting="true" allowPaging="true">
        <e-grid-pagesettings pageSize="5"></e-grid-pagesettings>
        
       
            <e-grid-columns>
                <e-grid-column headerText="Category" field="iconwithtitle"></e-grid-column>
                <e-grid-column headerText="Type" template="#typecolumn" width="150px"></e-grid-column>
                <e-grid-column headerText="Actions" template="#Actiontypecolumn" width="100px"></e-grid-column>

            </e-grid-columns>

        </ejs-grid>
    </div>
<div class="col-md-5">
    <div class="widget h-100 d-flex justify-content-center align-items-center" style="background-color:#212b30">
        <span class="e-icons e-edit"></span>
    </div>
</div>


</div>

   
        <script id="typecolumn" type="text/x-template">
            ${if(Type=="Income")}
            <span class="badge bg-success">${Type}</span>
            ${else}
                <span class="badge bg-danger">${Type}</span>

                ${/if}

        </script>

<script id="Actiontypecolumn" type="text/x-template">
   <div class="d-flex flex-row justify-content-start" >
        <a class="btn btn-sm link-style" href="/Category/CreateAndEdit/${CategoryId}">
        <span class="e-icons e-edit"></span>
           </a>

            <form action="/Category/Delete/${CategoryId}" method="post">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger link-style" onclick="return confirm(&quot;Are you sure&quot;)">
                             <span class="e-icons e-trash"></span>


                             </button>
                             </form>

   </div>

        

</script>

    

