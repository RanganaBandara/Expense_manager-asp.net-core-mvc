@model Expense_manager.Models.Category

@{
    ViewData["Title"] = "CreateAndEdit";
}

<h1>Create</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateAndEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <div class='e-btn-group custom-rbt-group'>
                    <input type="radio" id="radioleft" name="Type" value="Expense" checked="@(Model.Type=="Expense")" />
                    <label class="e-btn" for="radioleft">Expense</label>
                    <input type="radio" id="radiomiddle" name="Type" value="income" checked="@(Model.Type=="Income")" />
                    <label class="e-btn" for="radiomiddle">Income</label>
                </div>
            </div>
            <div class="mb-3">
               <ejs-textbox ejs-for="title" id="title" name="title" placeholder="title" ejs-value="Model.title" floatLabelType="Always"></ejs-textbox>

                <span asp-validation-for="title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <ejs-textbox ejs-for="icon" id="icon" name="icon" placeholder="icon" ejs-value="@Model.icon" floatLabelType="Always"></ejs-textbox>
                <span asp-validation-for="icon" class="text-danger"></span>
            </div>
          

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
